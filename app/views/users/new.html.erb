<div>
<%= form_for(@user, html: {class: "form-signup"}) do |f| %>
<div class="text-center">
    <img class="mb-4" src="assets/logo.png" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>
</div>
<%= f.label :account_name %>
<%= f.text_field :account_name, class: "form-control" %>
<%= f.label :first_name %>
<%= f.text_field :first_name, class: "form-control" %>
<%= f.label :last_name %>
<%= f.text_field :last_name, class: "form-control" %>
<%= f.label :email %>
<%= f.email_field :email, class: "form-control" %>
<%= f.label :password %>
<%= f.password_field :password, class: "form-control" %>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation, class: "form-control mb-3" %>
<div class="text-center ">
    <%= f.submit "Create account", class: "btn btn-block btn-primary" %>
</div>
<% end %>
